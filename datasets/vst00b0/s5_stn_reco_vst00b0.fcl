# -*- mode:tcl -*-
#------------------------------------------------------------------------------
# S5 stntupling
#------------------------------------------------------------------------------
BEGIN_PROLOG
  TRIGGER_PATHS                   : [ p1 ]
END_PROLOG

#include "Stntuple/fcl/stntuple.fcl"

process_name : S5StnReco
#------------------------------------------------------------------------------
services.GeometryService.inputFile    : "pipenu/datasets/rpc14b0/geom_pipenu_rpc14b0.txt"
services.GeometryService.bFieldFile   : "Offline/Mu2eG4/geom/bfgeom_v01.txt"

source       : { module_type : RootInput fileNames : ["undefined", "undefined"] }

physics : { 
    producers  : { @table::stntuple.producers }
    filters    : { @table::stntuple.filters   }
    
    analyzers  : { @table::stntuple.analyzers 
	StntupleMaker: { @table::stntuple.analyzers.StntupleMaker
#------------------------------------------------------------------------------
# disable everything, enable StepPointMC's, VDET block is just yet another StepPointMC block
#------------------------------------------------------------------------------
	    makeClusters     : 1
	    makeCrvClusters  : 0  # default: 1
	    makePid          : 0
	    makeSimp         : 1
	    makeStepPointMC  : 1
	    makeHelices      : 1
	    makeTimeClusters : 1
	    makeTracks       : 1
	    makeTrackSeeds   : 1
	    makeTrigger      : 0

	    simpCollTag      : "compressDigiMCs"
            minSimpMomentum  : -1  ## to get stopped pi+
	    spmcBlockName    : [ "SpmcBlock"                       , "IPABlock"             ]
	    spmcCollTag      : [ "compressDigiMCs:virtualdetector" , "compressDigiMCs:protonabsorber" ]
	    statusG4Tag      : [ "g4run"                           , "g4run"                ]
#------------------------------------------------------------------------------
# so far, positive and negative helices reside in different collections
# to be merged - done !
# labels like "KSFDe" have to be chanded in sync in many places
#------------------------------------------------------------------------------
	    helixBlockName       : [ "HelixBlock" ]
	    helixCollTag         : [ "MHDe"       ]
            helixKsCollTag       : [ "KKDePar"    ]       ## KalSeed collection corresponding to helices

	    timeClusterCollTag   : [ "TZClusterFinder"  ] ## , "PhiClusterFinder" ]  ## 
	    timeClusterBlockName : [ "TimeClusterBlock" ] ## , "PhiClusterBlock"  ]  ##

            trackCollTag         : [ "KKDePar"    ]
            trackFitType         : 2
#            trackSeedCollTag     : [ "KSFDe"   ]
#            trackTsCollTag       : [ "KSFDePar"   ]
#            trackTsBlockName     : [ "KSFBlock"  ]

	    primaryParticleTag   : ""
	}
    }

    @table::stntuple.paths

    p1 : [ @sequence::TrkHitReco.PrepareHits ]
    
    trigger_paths : [ ]
    out           : [ ]                                  # [defaultOutput]/[]
    e1            : [ @sequence::stntuple.paths.p0 ]
    end_paths     : [ e1 , out ]
}

#------------------------------------------------------------------------------
physics.analyzers.InitStntuple.histFileName : "nts.mu2e.rpc14b0s51r0100.pipenu.001210_00000000.stn"
